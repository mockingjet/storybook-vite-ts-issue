{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"strict": true,
		"strictNullChecks": true,
		"jsx": "preserve",
		"sourceMap": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"lib": ["ESNext", "DOM"],
		"skipLibCheck": true,
		"rootDir": "./",
		"baseUrl": "./",
		"paths": {
			"@srx-ui/*": ["packages/*"]
		}
	},
	"include": ["packages/**/*.ts", "packages/**/*.tsx", "packages/**/*.vue"],
	"exclude": ["**/node_modules", "**/dist", "**/__tests__", "**/*.md"]
}
